<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:RestaurantUI.Styles">

    <Color x:Key="BackgroundBlack">#1F1C18</Color>
    <SolidColorBrush x:Key="BackgroundBlackBrush" Color="{StaticResource BackgroundBlack}" />

    <Color x:Key="BackgroundRed">#8E0E00</Color>
    <SolidColorBrush x:Key="BackgroundRedBrush" Color="{StaticResource BackgroundRed}" />

    <Color x:Key="ForegroundWhite">#FFFFFF</Color>
    <SolidColorBrush x:Key="ForegroundWhiteBrush" Color="{StaticResource ForegroundWhite}" />

    <Color x:Key="MouseOverGray">#D3D3D3</Color>
    <SolidColorBrush x:Key="MouseOverGrayBrush" Color="{StaticResource MouseOverGray}" />

</ResourceDictionary>